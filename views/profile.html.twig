{% extends 'layout.html.twig' %}
{% block page_title %}{{ parent() }} - profile{% endblock %}

{% block content %}
    <h2><a href="?action=profile&profile_id={{ userInfo.id }}">{{ userInfo.username }} @{{ userInfo.at_username }}</a></h2>
    {% for twtt in tl %}
        {% if twtt.type in ['retwtt'] %}
            <div>
                <div class="header">
                    <a href="?action=profile&profile_id={{ userInfo.id }}">{{ userInfo.username }}</a> a retwtt√©
                    <br>
                    <a href="?action=profile&profile_id={{ twtt.author.id }}">{{ twtt.author.username }} @{{ twtt.author.at_username }}</a>
                </div>
                <div class="content">
                    {{ twtt.content }}
                </div>
            </div>
            <hr>
        {% elseif twtt.type in ['twtt'] %}
            <div>
                <div class="header">
                    <a href="?action=profile&profile_id={{ userInfo.id }}">{{ userInfo.username }} @{{ userInfo.at_username }}</a>
                    <br>
                    {{ twtt.creation }}
                </div>
                <div class="content">
                    {{ twtt.content }}
                </div>
            </div>
            <hr>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block script %}
    <script src="./assets/scripts/profile.js"></script>
{% endblock %}