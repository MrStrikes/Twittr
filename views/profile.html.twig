{% extends 'layout.html.twig' %}
{% block page_title %}{{ parent() }} - profile{% endblock %}
{% block style %}<link rel="stylesheet" href="./assets/profile.css">{% endblock %}

{% block content %}
    <h2 class="profile-head">Profile of <a href="?action=profile&amp;profile_id={{ userInfo.id }}">{{ userInfo.username }} @{{ userInfo.at_username }}</a></h2>
    <div class="actions">
    {% if userInfo['id'] != session['id'] and isFollowing == false %}
        <a href='?action=follow' class='badge badge-primary'>Follow user</a>
    {% elseif isFollowing == true %}
        <a href='?action=unfollow' class='badge badge-primary'>Unfollow</a>
    {% endif %}
    </div><br>
    <div class="tl-profile">
    </div>
    <input type="hidden" value={{ session['id'] }} class="session_id">
{% endblock %}

{% block script %}
    <script src="./assets/scripts/search.js"></script>
    <script src="./assets/scripts/profile.js"></script>
    <script src="./assets/scripts/follow.js"></script>
{% endblock %}